{% extends "AppBundle::base.html.twig" %}

{% block body %}
    <div class="checkout">
        <div class="container">
            <div class="col-md-12 product-price1">
                <div class="check-out">
                    <div class=" cart-items">
                        <h3>Mon panier</h3>

                        <table id="cart" class="table table-striped table-bordered" cellspacing="0">
                            <thead>
                            <th>Produit</th>
                            <th>Prix Unitaire</th>
                            <th>Quantit√©</th>
                            <th>Prix H.T.</th>
                            <th></th>
                            </thead>
                            <tbody>
                            {% for item in products %}
                                <tr class="cart-header">
                                    <td>{{ item.product.name }}</td>
                                    <td>
                                        {% if item.promotion is not null %}
                                            {% set puht = item.product.price - (item.product.price * item.promotion / 100) %}
                                            {{ puht }}
                                        {% else %}
                                            {% set puht = item.product.price %}
                                            {{ puht }}
                                        {% endif %}
                                    </td>
                                    <td>{{ item.quantity }}</td>
                                    <td class="price-ht">{{ puht * item.quantity }}</td>
                                    <td>
                                        <a href="{{ path('remove_to_cart', {'id' : item.product.id }) }}"
                                           class="add-cart cart-check">
                                            <i class="material-icons">delete</i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <td colspan="3" style="text-align: right">
                                    Total H.T.
                                </td>
                                <td colspan="2" class="total-price-ht">

                                </td>
                            </tr>

                            <tr>
                                <td colspan="3" style="text-align: right">
                                    T.V.A. (20%)
                                </td>
                                <td colspan="2" class="vat">

                                </td>
                            </tr>

                            <tr>
                                <td colspan="3" style="text-align: right">
                                    Total T.T.C
                                </td>
                                <td colspan="2" class="total-with-tax">

                                </td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
      $(document).ready(function () {
        $('#cart').on('init.dt', () => {}).DataTable({
          'order': [[0, 'desc']],
          'columnDefs': [{
            'targets': [4],
            'orderable': false,
            'searchable': false
          }],
          iDisplayLength: 10,
          'language': {
            'url': '/lang/fr.json'
          },
          searching: false,
          paging: false,
          fixedHeader: {
            footer: true,
            footerOffset: 0,
            header: true,
            headerOffset: 0
          }
        })
        calculateSum()
      })

      $(document).ready(function (c) {
        $('.close1').on('click', function (c) {
          $('.cart-header').fadeOut('slow', function (c) {
            $('.cart-header').remove()
            calculateSum()
          })
        })
      })

      $(document).ready(function (c) {
        $('.close2').on('click', function (c) {
          $('.cart-header1').fadeOut('slow', function (c) {
            $('.cart-header1').remove()
            calculateSum()
          })
        })
      })

        function calculateSum() {
          var sum = 0
          $(".price-ht").each(function() {
            var value = $(this).text()

            if (!isNaN(value) && value.length != 0) {
              sum += parseFloat(value)
            }
          })
          var vat = sum * 20 / 100
          $('.total-price-ht').html(sum)
          $('.vat').html(vat)
          $('.total-with-tax').html(vat + sum)
        }
    </script>
{% endblock %}