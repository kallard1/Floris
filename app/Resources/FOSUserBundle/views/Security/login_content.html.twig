{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" class="form-horizontal" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}
    <div class="form-group">
        <label for="username"
               class="control-label col-xs-offset-2 col-xs-2">{{ 'security.login.username'|trans }}</label>
        <div class="col-xs-4">
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}"
                   required="required"/>
        </div>
    </div>
    <div class="form-group">
        <label for="password"
               class="col-xs-offset-2 col-xs-2 control-label">{{ 'security.login.password'|trans }}</label>
        <div class="col-xs-4">
            <input type="password" id="password" class="form-control" name="_password" required="required"/>
        </div>

    </div>
    <div class="form-group">
        <div class="col-xs-offset-4 col-xs-3">
            <div class="checkbox">
                <label for="remember_me" class="control-label">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/> {{ 'security.login.remember_me'|trans }}
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-offset-4 col-xs-3">
            <input type="submit" id="_submit" name="_submit" class="btn btn-primary"
                   value="{{ 'security.login.submit'|trans }}"/>
        </div>
    </div>
</form>
