{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register, form-horizontal'}}) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.businessName, "Business name", {'label_attr': {'class': 'col-xs-2 control-label'}}) }}

        {{ form_errors(form.businessName) }}

        <div class="col-xs-10">
            {{ form_widget(form.businessName, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.companyRegister, "Company Register", {'label_attr': {'class': 'col-xs-2 control-label'}}) }}

        {{ form_errors(form.companyRegister) }}

        <div class="col-xs-10">
            {{ form_widget(form.companyRegister, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.vatNumber, "V.A.T. Number", {'label_attr': {'class': 'col-xs-2 control-label'}}) }}

        {{ form_errors(form.vatNumber) }}

        <div class="col-xs-10">
            {{ form_widget(form.vatNumber, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.address_line1, "Address", {'label_attr': {'class': 'col-xs-2 control-label'}}) }}

        {{ form_errors(form.address_line1) }}

        <div class="col-xs-10">
            {{ form_widget(form.address_line1, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.email, "Adresse e-mail", {'label_attr': {'class': 'col-xs-2 control-label'}}) }}

        {{ form_errors(form.email) }}

        <div class="col-xs-10">
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    {{ form_widget(form) }}
    <div>
        <input type="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans }}" />
    </div>
{{ form_end(form) }}
